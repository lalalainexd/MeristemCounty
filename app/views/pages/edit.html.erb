<h1>Editing page</h1>

<% form_for([@comic, @chapter, @page], :url => comic_chapter_page_path, :html => { :multipart => true }) do |f| %>
  <%= f.label :comic_strip, 'Image' %>
  <%= f.file_field :comic_strip %>


  <%= f.error_messages %>

  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', comic_chapter_path(@comic, @chapter)%>
