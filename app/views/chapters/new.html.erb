<h1>New chapter</h1>

<% form_for([@comic, @chapter], :url => comic_chapters_path, :html => {:multipart => true }) do |f| %>
  <%= f.error_messages %>

  <%= f.label :title, 'Title' %>
  <%= f.text_field :title %> <br />

  <%= image_tag @chapter.image.url %>
  <%= f.label :image, 'Image' %>
  <%= f.file_field :image %> 

  <p>
  <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', comic_path(@comic) %>
