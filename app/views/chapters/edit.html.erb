<h1>Editing chapter</h1>

<% form_for([@chapter.comic, @chapter], :url => comic_chapter_path, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <%= f.label :title, 'Title' %>
  <%= f.text_field :title %> <br />

  <%= image_tag @chapter.image.url( :thumb ) %>
  <%= f.label :image, 'Image' %>
  <%= f.file_field :image %> 

  <p>
  <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', comic_chapter_path(@chapter.comic, @chapter) %>
